<Window x:Class="PdfSample.PdfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfSample"
        xmlns:mpp="clr-namespace:System.Data.MoonPdf.Wpf;assembly=NSystem.Data.MoonPdf.Wpf"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Left="2880"
        Top="0"
        Title="PdfWindow" Height="1080" Width="960">
    <Grid>
        <mpp:MoonPdfPanel Background="Transparent"
                          ViewType="SinglePage"
                          PageRowDisplay="ContinuousPageRows"
                          AllowDrop="True"
                          x:Name="moonPdfPanel"
                          x:FieldModifier="private" />
    </Grid>
</Window>
